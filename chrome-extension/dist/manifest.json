{
  "manifest_version": 3,
  "name": "Lunchbox AI",
  "version": "1.0.0",
  "description": "Your intelligent productivity companion - create tasks, analyze pages, and stay organized",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://lunchbox.chaimode.dev/*",
    "https://studio-7195653935-eecd8.web.app/*",
    "https://studio-7195653935-eecd8.firebaseapp.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["https://lunchbox.chaimode.dev/*"],
      "js": ["lunchbox-sync.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["widget.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}

